<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <div>
        <a href="campgrounds/new">Add Campground</a>
    </div>
    <% for(let campground of campgrounds) {%>
        <!-- <a href="campgrounds/<%= campground._id %>"><%= campground.title %></a> -->
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length){ %>
                    <img class="img-fluid" src="<%= campground.images[0].url %>">
                    <% } else { %>
                        <img src="https://res.cloudinary.com/douqbebwk/image/upload/w_200/v1600060601/YelpCamp/ruyoaxgf72nzpi4y6cdi.png" alt="">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <h5 class="card-text"><%= campground.description %></h5>
                        <p>
                            <small class="tex-light"><%= campground.location %></small>
                        </p>
                        <p>
                            <a class="btn btn-primary" href="campgrounds/<%= campground._id %>">View <%= campground.title %></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <script>
            const mapToken='<%-process.env.MAPBOX_TOKEN %>';
            const campgrounds= {features : <%-JSON.stringify(campgrounds)%>};
          </script>

        <script src="/javascripts/clusterMap.js"></script>

